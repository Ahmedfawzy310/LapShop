@model CreateFormViewModel

@{
    ViewData["Title"] = "Create";
}
@section Style{
    <link rel="stylesheet" asp-append-version="true" href="~/css/styleimagedisplayed.css" />
}


<form class="forms-sample" method="post" enctype="multipart/form-data">
<div class="row">
    <div class="col-6 ">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Add New Trip</h4>

                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input type="text" class="form-control" placeholder="Trip Name" asp-for="Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="StartIn"></label>
                        <input type="date" value="" class="form-control" asp-for="StartIn">
                        <span asp-validation-for="StartIn" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="EndIn"></label>
                        <input type="date" value="" class="form-control" asp-for="EndIn">
                        <span asp-validation-for="EndIn" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="SalesPrice"></label>
                        <input type="number" value="" class="form-control" asp-for="SalesPrice">
                        <span asp-validation-for="SalesPrice" class="text-danger"></span>
                     </div>

                    <div class="form-group">
                        <label asp-for="PurchasePrice"></label>
                        <input type="number" value="" class="form-control" asp-for="PurchasePrice">
                        <span asp-validation-for="PurchasePrice" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="CategoryId"></label>
                        <select class="form-control" asp-for="CategoryId" asp-items="Model.Categories">
                            <option value=""></option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="CountryId"></label>
                        <select class="form-control" asp-for="CountryId" asp-items="Model.Countries">
                            <option value=""></option>
                        </select>
                        <span asp-validation-for="CountryId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="SelectCites"></label>
                        <select class="form-control" asp-for="SelectCites" asp-items="Model.Cites">
                            <option></option>
                        </select>
                        <span asp-validation-for="SelectCites" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <textarea class="form-control" asp-for="Description" rows="4"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="custom-file mb-4">
                        <input type="file" class="custom-file-input" asp-for="Cover" 
                               data-rule-extension="@FormSetting.AllowdExtension.Replace(".",string.Empty)"
                               data-msg-extension="Not allowed extension"
                               data-rule-filesize="@FormSetting.AllowdFileSizeByByte"
                               data-msg-filesize="max size is (@FormSetting.AllowdFileSizeByMB)MB">

                        <label class="custom-file-label" asp-for="Cover"></label>

                        <span asp-validation-for="Cover" class="text-danger"></span>
                        <small class="form-text text-muted d-block">Only @FormSetting.AllowdExtension are allowed and size @(FormSetting.AllowdFileSizeByMB)MB</small>

                    </div>

                    <button type="submit" class="btn btn-primary me-2">Submit</button>
                    <a class="btn btn-secondary" asp-action="Index" asp-controller="Home">Cancel</a>
                </div>
                
            </div>
        </div>

    <div class="col-md-6 d-flex justify-content-center pt-4 overflow-hidden">
            <img class="cover-preview d-none w-100" alt="Cover" />
    </div>

</div>
</form>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/validationfilesize.js" asp-append-version="true"></script>
    <script src="~/js/displayimg.js" asp-append-version="true"></script>
                    }